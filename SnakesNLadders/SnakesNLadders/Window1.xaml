            <Border BorderBrush="Gold"  BorderThickness="5" Grid.Row="0" Grid.Column="3" x:Name="p1border" />
            <Border BorderBrush="Silver"  BorderThickness="5" Grid.Row="0" Grid.Column="4" x:Name="p2border" />

